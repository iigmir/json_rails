console.log("Hello");
var app = new Vue({
  el: '#app',
  data: {
    message: 'Hello Vue!',
    items:
    [
      { message: 'Foo' },
      { message: 'Bar' },
      { message: '2000' }
    ]
  }
});
<% end %>
